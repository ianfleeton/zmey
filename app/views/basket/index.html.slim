h1= t('cart')
- if @page
  p= link_to (t('continue_shopping') + '&hellip;').html_safe, @page.path

- if @basket.basket_items.empty?
  p Your basket is empty.
- else
  = render partial: 'email_basket_form', locals: { basket: @basket }
  = render partial: 'basket', object: @basket, locals: {can_update: true, shipping_amount: nil, shipping_vat_amount: nil, inc_vat: @inc_vat}
