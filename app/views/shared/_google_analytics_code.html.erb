<% if website.google_analytics_code.present? -%>
<script async src="https://www.googletagmanager.com/gtag/js?id=<%= website.google_analytics_code %>"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', '<%= website.google_analytics_code %>', {'transport_type': 'beacon'});
</script>
<% end -%>
