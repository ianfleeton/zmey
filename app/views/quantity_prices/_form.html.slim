- if @quantity_price.errors.any?
  .alert.alert-error.fade.in
    a.close data-dismiss="alert" href="#" &times;
    h2= "#{pluralize(@quantity_price.errors.count, "error")} prohibited this quantity/price rule from being saved:"
    ul
      - @quantity_price.errors.full_messages.each do |msg|
        li= msg

= form_for @quantity_price do |form|
  = form.hidden_field :product_id

  .form-group
    = form.label :quantity
    = form.text_field :quantity, class: 'form-control'

  .form-group
    = form.label :price, 'Price (GBP)'
    = form.text_field :price, class: 'form-control'

  br
  = form.submit class: 'btn btn-primary'

