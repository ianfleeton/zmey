<% content_for :title, t(".title", website: website) %>

<h1>Forgot Password</h1>

<p>
  Enter your email address below and press <em>Send</em> for further instructions
  showing how to reset and change your password.
</p>

<%= form_tag(account_forgot_password_send_email_path) do %>
  <div>
    <label for="email">Email:</label><br>
    <%= email_field_tag :email, params[:email], required: true %>
  </div>

  <%= submit_tag "Send" %>
<% end %>
